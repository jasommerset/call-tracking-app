<%= form_for @call, :html => { :class => "form-horizontal call" } do |f| %>

    <% if @call.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@call.errors.count, "error") %> prohibited this call from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @call.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :CallDuration, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :CallDuration, :class => 'form-control' %>
    </div>
    <%= error_span(@call[:CallDuration]) %>
  </div>
  <div class="control-group">
    <%= f.label :From, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :From, :class => 'form-control' %>
    </div>
    <%= error_span(@call[:From]) %>
  </div>
  <div class="control-group">
    <%= f.label :To, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :To, :class => 'form-control' %>
    </div>
    <%= error_span(@call[:To]) %>
  </div>
  <div class="control-group">
    <%= f.label :CallSid, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :CallSid, :class => 'form-control' %>
    </div>
    <%= error_span(@call[:CallSid]) %>
  </div>
  <div class="control-group">
    <%= f.label :number_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :number_id, :class => 'form-control' %>
    </div>
    <%= error_span(@call[:number_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            calls_path, :class => 'btn btn-default' %>

<% end %>
