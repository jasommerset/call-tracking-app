<%- model_class = Number -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:area_code) %>:</strong></dt>
  <dd><%= @number.area_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tracking_number) %>:</strong></dt>
  <dd><%= @number.tracking_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:business_number) %>:</strong></dt>
  <dd><%= @number.business_number %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              numbers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_number_path(@number), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              number_path(@number),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
